<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="manage.Login">
	<typeAlias alias="user" type="com.report.manage.bean.User"/>
	
	<select id="manage.getUserInfo" parameterClass="user" resultClass="user">
	<![CDATA[
		select id,username,realname,usertype from t_admin where username=#username# and password=#password# 
	]]>
	</select>
	
</sqlMap>