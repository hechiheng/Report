<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link rel='stylesheet' type="text/css" href="$link.setRelative('/manage/css/style.css')" />
<script type="text/javascript" src="$link.setRelative('/manage/js/jquery-1.7.2.min.js')"></script>
<script type="text/javascript" src="$link.setRelative('/manage/js/common.js')"></script>
</head>
<body>
<div class="main">
    <div class="pos">
    	<a href="$link.setAction('load4RoleIndex')">岗位管理</a>
    </div>
    <div class="operate">
        <div class="left">
		#set($istrash = $request.getAttribute("istrash"))
		#if($istrash=="1")
			<input type="button" onclick="goUrl('$link.setAction('load4RoleIndex')')"  class="btn_blue" value="返回" />
		#else
			<input type="button" onclick="goUrl('$link.setAction('load4RoleAdd')')" class="btn_blue" value="添加岗位" />
            <input type="button" onclick="goUrl('$link.setAction('load4RoleIndex').addQueryData('istrash','1')')" class="btn_green" value="回收站" />
		#end
        </div>
		#if($istrash=="1")
			&nbsp;
		#else
		<div class="left_pad">
            <form method="get" action="$link.setAction('load4RoleIndex')">
            	<span style='font-size: 14px;vertical-align: middle;'>岗位名称：</span>
                <input type="text" name="role.name" title="关键字" class="inp_default" value="$!queryRoleForm.role.name">
                <input type="submit" class="btn_blue" value="查  询">
            </form>
        </div>
		#end
    </div>
    <div class="list">    
        <table width="100%">
            <tr>
                <th>编号</th>
				<th class="aleft">岗位名称</th>
				<th class="aleft" width="40%">岗位描述</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
			#set($roleList = $request.getAttribute("roleList"))
			#foreach($role in $roleList)
			<tr>
				<td>$!role.id</td>
				<td class='aleft'>$!role.name</td>
				<td class='aleft'>$!role.description</td>
				<td>
					#if($!role.isdisabled==0)
                        <span style='color: green;'>正常</span> 
					#else
						<span style='color: red;'>禁用</span>
					#end
				</td>
				<td>
				#if($istrash=="1")
					<a href="javascript:;" onclick="toConfirm('$link.setAction('restoreRole').addQueryData('id',$!role.id)','确实要还原吗？')">还原</a>
					<a href="javascript:;" onclick="toConfirm('$link.setAction('removeRole').addQueryData('id',$!role.id)','该操作不可恢复，确实要删除吗？')">彻底删除</a>
				#else
					<a href="$link.setAction('load4RoleAccessModify').addQueryData('id',$!role.id)">权限设置</a>
					<a href="$link.setAction('load4RoleModify').addQueryData('id',$!role.id)">编辑</a>
					#if($!role.isdisabled==0)
					<a href="javascript:;" onclick="toConfirm('$link.setAction('disabledRole').addQueryData('id',$!role.id)','确实要禁用吗？')">禁用</a>
					#else
					<a href="javascript:;" onclick="toConfirm('$link.setAction('enableRole').addQueryData('id',$!role.id)','确实要启用吗？')">启用</a>
					#end
					<a href="javascript:;" onclick="toConfirm('$link.setAction('trashRole').addQueryData('id',$!role.id)','确实要删除吗？')">删除</a>
				#end
                </td>
            </tr>
			#end
        </table>
        <div class="page" style="clear: both;">
			#parse("/home/include/page.vm")
        </div>
    </div>
</div>
</body>
</html>
