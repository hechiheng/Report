<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link rel='stylesheet' type="text/css" href="$link.setRelative('/manage/css/style.css')" />
<script type="text/javascript" src="$link.setRelative('/manage/js/jquery-1.7.2.min.js')"></script>
<script type="text/javascript" src="$link.setRelative('/manage/js/common.js')"></script>
<script type="text/javascript" src="$link.setRelative('/manage/js/jquery.form.min.js')"></script>
<script type="text/javascript" src="$link.setRelative('/manage/js/calendar.config.js')"></script>
<style type="text/css">
.h3{padding:5px; background:#C5E3FA; font-size:14px; font-weight:bold;}
.wzzw{padding:10px; line-height:21px;}
.lh{font-size:14px; line-height:28px;}
</style>
<script type="text/javascript">
jQuery(function () {
     jQuery("input[name='matchapply.score']").focus();
	 
	 jQuery("input[name='matchapply.ispublish']").click(function(){
	   var v=jQuery(this).val();
	   var publishtime = jQuery("input[name='matchapply.publishtime']");
	   if(v=='1'){
	   		publishtime.parent().find("span").remove().end().append("<span class='error'>*</span>");
	   }else{
	   		publishtime.parent().find("span").remove();
	   }
     });
	 
     jQuery("#form_do").submit(function(){
		var score = jQuery("input[name='matchapply.score']");
		var ispublish = jQuery("input[name='news.ispublish']:checked");
		var publishtime = jQuery("input[name='news.publishtime']");
		if(jQuery.trim(score.val())==''){
			score.parent().find("span").remove().end().append("<span class='error'>参赛年度不能为空</span>");
			score.focus();
			return false;			
		}else {
			score.parent().find("span").remove().end();
		}
		if(ispublish.val()=='1'){
			if(jQuery.trim(publishtime.val())==''){
				publishtime.parent().find("span").remove().end().append("<span class='error'>发布时间不能为空</span>");
				return false;	
			}else {
    			publishtime.parent().find("span").remove().end();
    		}
		}

	});
	
});


</script>
</head>
<body>
<div class="main">
    <div class="pos">录入参赛结果</div>
	<div class="form">
		<form method='post' id="form_do" name="form_do" action="$link.setAction('modifyMatchresult')">
		<div class="h3">
			<span>参赛报名信息</span>
		</div>
		<dl>
    		<dt>参赛年度：</dt>
    		<dd>$!modifyMatchresultForm.matchapply.annualmatch</dd>
    	</dl>
    	<dl>
    		<dt> 参赛项目：</dt>
    		<dd>$!modifyMatchresultForm.matchapply.matchname</dd>
    	</dl>	
    	<dl>
    		<dt>作品名称：</dt>
    		<dd>$!modifyMatchresultForm.matchapply.name</dd>
    	</dl>
    	<dl>
    		<dt>学校名称：</dt>
    		<dd>$!modifyMatchresultForm.matchapply.unitname</dd>
    	</dl>
    	<dl>
    		<dt>作者姓名：</dt>
    		<dd>$!modifyMatchresultForm.matchapply.authors</dd>
    	</dl>
    	<dl>
    		<dt>辅导老师：</dt>
    		<dd>$!modifyMatchresultForm.matchapply.teachers</dd>
    	</dl>
		<dl>
    		<dt>报名状态：</dt>
    		<dd>
				#if($!modifyMatchresultForm.matchapply.state==0)
					<span style='color: #0000FF;'>未提交</span> 
				#elseif($!modifyMatchresultForm.matchapply.state==1)
					<span style='color: #8A2BE2;'>已提交</span>
				#elseif($!modifyMatchresultForm.matchapply.state==2)
					<span style='color: #00FF00;'>审核通过</span>
				#elseif($!modifyMatchresultForm.matchapply.state==3)
					<span style='color: #FF0000;'>审核未通过</span>
				#end
			</dd>
    	</dl>
    	<dl>
    		<dt>作品简述：</dt>
    		<dd>
    			<div class="wzzw lh" id="content">
        			$!modifyMatchresultForm.matchapply.description
        		</div>
    		</dd>
    	</dl>
		<div class="h3">
			<span>录入参赛结果</span>
		</div>
		<dl>
			<dt>比赛得分：</dt>
			<dd>
				<input type="text" name="matchapply.score" class="inp_one" value="$!modifyMatchresultForm.matchapply.score"/>
				<span style="color: red;">*</span>
			</dd>
		</dl>
		<dl>
			<dt>比赛名次：</dt>
			<dd>
				<input type="text" name="matchapply.ranking" class="inp_large" value="$!modifyMatchresultForm.matchapply.ranking"/>
			</dd>
		</dl>
		<dl>
			<dt>比赛奖项：</dt>
			<dd>
				<textarea name="matchapply.awards" class="tarea_default">$!modifyMatchresultForm.matchapply.awards</textarea>
			</dd>
		</dl>
		<dl>
			<dt> 是否发布：</dt>
			<dd>
				<label><input type="radio" name="matchapply.ispublish" value="1" #if($!modifyMatchresultForm.matchapply.ispublish==1) checked="checked" #end />立即发布&nbsp;</label>
				<label><input type="radio" name="matchapply.ispublish" value="0" #if($!modifyMatchresultForm.matchapply.ispublish==0) checked="checked" #end />暂不发布</label>
			</dd>
		</dl>
		<dl>
            <dt> 发布时间：</dt>
            <dd>
                <input type="text" class="inp_one" name="matchapply.publishtime" id="publishtime" readonly="readonly" value="$!modifyMatchresultForm.matchapply.publishtime" />
				#if($!modifyMatchresultForm.matchapply.ispublish==1) <span style="color: red;">*</span> #end
                <script type="text/javascript">
                    Calendar.setup({
                        weekNumbers: true,
                        inputField : "publishtime",
                        trigger    : "publishtime",
                        dateFormat: "%Y-%m-%d %H:%M:%S",
                        showTime: true,
                        minuteStep: 1,
                        onSelect   : function() {this.hide();}
                    });
                </script>
            </dd>
        </dl>	
		<dl>
			<span class='error'>#errorMarkup()</span>
        </dl>
		<div class="form_b">		
			<input type="hidden" name="matchapply.matchresultid" value="$!modifyMatchresultForm.matchapply.id" />
			<input type="submit" class="btn_blue" id="submit" value="提 交">
			<input type="button" class="btn_blue" id="back" value="返 回" onclick="javascript:history.back();" />
		</div>
	   </form>
	</div>
</div>


</body>
</html>