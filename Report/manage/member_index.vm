<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
<link rel='stylesheet' type="text/css" href="$link.setRelative('/manage/css/style.css')" />
<script type="text/javascript" src="$link.setRelative('/manage/js/jquery-1.7.2.min.js')"></script>
<script type="text/javascript" src="$link.setRelative('/manage/js/common.js')"></script>
</head>
<body>
<div class="main">
    <div class="pos">
    	<a href="$link.setAction('load4MemberIndex')">会员管理</a>
    </div>
    <div class="operate">
        <div class="left">
		#set($istrash = $request.getAttribute("istrash"))
		#if($istrash=="1")
			<input type="button" onclick="goUrl('$link.setAction('load4MemberIndex')')"  class="btn_blue" value="返回" />
		#else
			<input type="button" onclick="goUrl('$link.setAction('load4MemberAdd')')" class="btn_blue" value="添加会员" />
            <input type="button" onclick="goUrl('$link.setAction('load4MemberIndex').addQueryData('istrash','1')')" class="btn_green" value="回收站" />
		#end
        </div>
		#if($istrash=="1")
			&nbsp;
		#else
		<div class="left_pad">
            <form method="get" action="$link.setAction('load4MemberIndex')">
            	<span style='font-size: 14px;vertical-align: middle;'>用户名：</span>
                <input type="text" name="member.accountid" title="关键字" class="inp_default" value="$!queryMemberForm.member.accountid">
                <input type="submit" class="btn_blue" value="查  询">
            </form>
        </div>
		#end
    </div>
    <div class="list">    
        <table width="100%">
            <tr>
                <th>编号</th>
                <th>用户名</th>
				<th>名称</th>
				<th>性别</th>
				<th>身份证号</th>
                <th>状态</th>
				<th>最近登录时间</th>
                <th>操作</th>
            </tr>
			#set($memberList = $request.getAttribute("memberList"))
			#foreach($member in $memberList)
			<tr>
				<td>$!member.id</td>
				<td>$!member.accountid</td>
				<td>$!member.factname</td>
				<td>#if($!member.sex==1)男#else女#end</td>
				<td>$!member.idcard</td>
				<td>
					#if($!member.islock==0)
                        <span style='color: green;'>正常</span> 
					#else
						<span style='color: red;'>锁定</span>
					#end
				</td>
				<td>$!member.logintime</td>
				<td>
					<a href="$link.setAction('load4MemberInfo').addQueryData('id',$!member.id)">查看</a>
				#if($istrash=="1")
					<a href="javascript:;" onclick="toConfirm('$link.setAction('restoreMember').addQueryData('id',$!member.id)','确实要还原吗？')">还原</a>
					<a href="javascript:;" onclick="toConfirm('$link.setAction('removeMember').addQueryData('id',$!member.id)','该操作不可恢复，确实要删除吗？')">彻底删除</a>
				#else
					<a href="$link.setAction('load4MemberModify').addQueryData('id',$!member.id)">编辑</a>
					<a href="javascript:;" onclick="toConfirm('$link.setAction('resetMemberPwd').addQueryData('id',$!member.id)','确实要重置密码么？')">重置密码</a>
					#if($!member.islock==0)
					<a href="javascript:;" onclick="toConfirm('$link.setAction('lockMember').addQueryData('id',$!member.id)','确实要锁定吗？')">锁定</a>
					#else
					<a href="javascript:;" onclick="toConfirm('$link.setAction('unLockMember').addQueryData('id',$!member.id)','确实要解锁吗？')">解锁</a>
					#end
					<a href="javascript:;" onclick="toConfirm('$link.setAction('trashMember').addQueryData('id',$!member.id)','确实要删除吗？')">删除</a>
				#end
                </td>
            </tr>
			#end
        </table>
        <div class="page" style="clear: both;">
			#parse("/home/include/page.vm")
        </div>
    </div>
</div>
</body>
</html>
