<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>


	<!-- ================================================ Form Bean Definitions -->

	<form-beans>
		<form-bean name="loginForm" type="org.apache.struts.validator.DynaValidatorForm">
	        <form-property name="username" type="java.lang.String"/>
	        <form-property name="password" type="java.lang.String"/>
	        <form-property name="imagecode" type="java.lang.String"/>
        </form-bean>
        <form-bean name="addNewsForm"
			type="com.report.manage.form.NewsForm">
		</form-bean>
		<form-bean name="modifyNewsForm"
			type="com.report.manage.form.NewsForm">
		</form-bean>
        
	</form-beans>


	<!--  ========================================= Global Exception Definitions  -->

	<global-exceptions>
		<exception
	        key="request.invalid"
	        type="com.css.base.BaseException"
	        handler="com.css.base.BaseExceptionHandler"
	        path="/error.do"/>
	</global-exceptions>


	<!-- =========================================== Global Forward Definitions-->

	<global-forwards>
		<!-- 全局信息提示页面转向 -->
        <forward name="error" path="/error.do" />
		<forward name="info" path="/info.do" />
		<forward name="index" path="/index.do" redirect="true"/>
	</global-forwards>


	<!-- =========================================== Action Mapping Definitions-->

	<action-mappings>
		<action path="/error" forward="/../sys_message.vm"/>
		<action path="/info" forward="/../sys_message.vm" />
		<action path="/index" forward="/load4Index.do"/>
		
		<action
        	path="/load4Login"
			type="com.report.manage.action.LoginAction"
			scope="request"
			input="/loginOn.do"
			validate="false"
			parameter="load4Login">
			<forward name="success" path="/../manage/login.vm"/>
        </action>
		<action	path="/login"
			type="com.report.manage.action.LoginAction"
			scope="request"
			input="/load4Login.do"
			name="loginForm"
			validate="true"
			parameter="login">
			<forward name="failure" path="/../manage/login.vm" />
		</action>
		<action
        	path="/imageCode"
			type="com.report.manage.action.LoginAction"
			scope="request"
			input="/load4Login.do"
			validate="false"
			parameter="imageCode">
        </action>
		<action
        	path="/load4Index"
			type="com.report.manage.action.LoginAction"
			scope="request"
			validate="false"
			parameter="load4Index">
			<forward name="success" path="/../manage/index.vm"/>
        </action>
		<action
        	path="/logout"
			type="com.report.manage.action.LoginAction"
			scope="request"
			validate="false"
			parameter="logout">
			<forward name="success" path="/load4Login.do" redirect="true"/>
        </action>
        <action
        	path="/load4NewsIndex"
			type="com.report.manage.action.NewsAction"
			scope="request"
			validate="false"
			parameter="load4NewsIndex">
			<forward name="success" path="/../manage/news_index.vm"/>
        </action>
        <action
        	path="/load4NewsAdd"
			type="com.report.manage.action.NewsAction"
			scope="request"
			validate="false"
			parameter="load4NewsAdd">
			<forward name="success" path="/../manage/news_add.vm"/>
        </action>
        <action
        	path="/addNews"
			type="com.report.manage.action.NewsAction"
			scope="request"
			input="/load4NewsAdd.do"
			name="addNewsForm"
			validate="true"
			parameter="addNews">
        </action>
        <action
        	path="/load4NewsModify"
			type="com.report.manage.action.NewsAction"
			scope="request"
			name="modifyNewsForm"
			validate="false"
			parameter="load4NewsModify">
			<forward name="success" path="/../manage/news_modify.vm"/>
        </action>
        <action
        	path="/modifyNews"
			type="com.report.manage.action.NewsAction"
			scope="request"
			input="/load4NewsAdd.do"
			name="modifyNewsForm"
			validate="true"
			parameter="modifyNews">
        </action>
        <action
        	path="/trashNews"
			type="com.report.manage.action.NewsAction"
			scope="request"
			validate="false"
			parameter="trashNews">
        </action>
        <action
        	path="/restoreNews"
			type="com.report.manage.action.NewsAction"
			scope="request"
			validate="false"
			parameter="restoreNews">
        </action>
        <action
        	path="/removeNews"
			type="com.report.manage.action.NewsAction"
			scope="request"
			validate="false"
			parameter="removeNews">
        </action>
	</action-mappings>


	<!-- ============================================= Controller Configuration-->

	<!--<controller
		processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>-->


	<!-- ======================================== Message Resources Definitions-->

	<message-resources parameter="resource.appResource" />


	<!-- =============================================== Plug Ins Configuration-->


	<!-- =================================================== Validator plugin-->

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,/WEB-INF/manage/validation.xml" />
	</plug-in>

	<!-- =================================================== AOP plugin -->
	<!-- 自动加载interceptor-config.xml的信息 -->
	<plug-in className="com.css.struts.aop.SAIFPlugin">
		<set-property property="interceptor-config"
			value="/WEB-INF/manage/interceptor-config.xml"/>
		<set-property value="UTF-8" property="encoding" />
	</plug-in>
	
</struts-config>