<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

	<!--
		This is a minimal Validator form file with a couple of examples.
	-->

	<global>

		<!--
			An example global constant <constant>
			<constant-name>postalCode</constant-name>
			<constant-value>^\d{5}\d*$</constant-value> </constant> end example
		-->

	</global>

	<formset>
		<form name="loginForm">
			<field property="username" depends="required">
				<arg key="loginForm.username" />
			</field>
			<field property="password" depends="required">
				<arg key="loginForm.password" />
			</field>
			<field property="code" depends="required">
				<arg key="loginForm.code" />
			</field>
		</form>

	</formset>

</form-validation>
