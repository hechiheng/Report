<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>


	<!-- ================================================ Form Bean Definitions -->

	<form-beans>
		<form-bean name="loginForm" type="org.apache.struts.validator.DynaValidatorForm">
	        <form-property name="accountid" type="java.lang.String"/>
	        <form-property name="password" type="java.lang.String"/>
	        <form-property name="imagecode" type="java.lang.String"/>
        </form-bean>
        
        <form-bean name="memberForm"
			type="com.report.home.form.MemberForm">
		</form-bean>
        
	</form-beans>


	<!--  ========================================= Global Exception Definitions  -->

	<global-exceptions>
		<exception
	        key="request.invalid"
	        type="com.css.base.BaseException"
	        handler="com.css.base.BaseExceptionHandler"
	        path="/error.do"/>
	</global-exceptions>


	<!-- =========================================== Global Forward Definitions -->

	<global-forwards>
		<!-- 全局信息提示页面转向 -->
        <forward name="error" path="/error.do" />
		<forward name="info" path="/info.do" />
		<forward name="index" path="/index.do" />
	</global-forwards>


	<!-- =========================================== Action Mapping Definitions -->

	<action-mappings>

		<action path="/error" forward="/sys_message1.vm"/>
		<action path="/info" forward="/sys_message1.vm" />
		<action path="/index" forward="/load4Home.do"/>
		
		<action
        	path="/load4Home"
			type="com.report.home.action.HomeAction"
			scope="request"
			validate="false"
			parameter="load4Home">
			<forward name="success" path="/home/index.vm"/>
        </action>
        <action
        	path="/load4Message"
			type="com.report.home.action.HomeAction"
			scope="request"
			validate="false"
			parameter="load4Message">
			<forward name="success" path="/home/message_list.vm"/>
        </action>
        <action
        	path="/showMessage"
			type="com.report.home.action.HomeAction"
			scope="request"
			validate="false"
			parameter="showMessage">
			<forward name="success" path="/home/message.vm"/>
        </action>
        <action
        	path="/load4News"
			type="com.report.home.action.HomeAction"
			scope="request"
			validate="false"
			parameter="load4News">
			<forward name="success" path="/home/news_list.vm"/>
        </action>
        <action
        	path="/showNews"
			type="com.report.home.action.HomeAction"
			scope="request"
			validate="false"
			parameter="showNews">
			<forward name="success" path="/home/news.vm"/>
        </action>
        <action
        	path="/load4About"
			type="com.report.home.action.HomeAction"
			scope="request"
			validate="false"
			parameter="load4About">
			<forward name="success" path="/home/about.vm"/>
        </action>
        <action
        	path="/load4MemberReg"
			type="com.report.home.action.MemberAction"
			scope="request"
			validate="false"
			parameter="load4MemberReg">
			<forward name="success" path="/home/member_reg.vm"/>
        </action>
        <action 
			path="/verifyMember" 
			type="com.report.home.action.MemberAction"
			scope="request" 
			parameter="verifyMember"
			validate="false">
		</action>
		<action
        	path="/regMember"
			type="com.report.home.action.MemberAction"
			scope="request"
			input="/load4RegMember.do"
			name="memberForm"
			validate="true"
			parameter="regMember">
			<forward name="failure" path="/home/member_reg.vm"/>
        </action>
        <action
        	path="/load4Login"
			type="com.report.home.action.LoginAction"
			scope="request"
			validate="false"
			parameter="load4Login">
			<forward name="success" path="/home/login.vm"/>
        </action>
        <action	path="/login"
			type="com.report.home.action.LoginAction"
			scope="request"
			input="/load4Login.do"
			name="loginForm"
			validate="true"
			parameter="login">
			<forward name="failure" path="/home/login.vm" />
			<forward name="success" path="/index.do" />
		</action>
		<action
        	path="/logout"
			type="com.report.home.action.LoginAction"
			scope="request"
			validate="false"
			parameter="logout">
			<forward name="success" path="/load4Login.do"/>
        </action>
        <action
        	path="/load4MemberIndex"
			type="com.report.home.action.LoginAction"
			scope="request"
			validate="false"
			parameter="load4MemberIndex">
			<forward name="success" path="/home/member_index.vm"/>
        </action>
		<action
        	path="/load4MemberChgPwd"
			type="com.report.home.action.LoginAction"
			scope="request"
			validate="false"
			parameter="load4MemberChgPwd">
			<forward name="success" path="/home/member_chgpwd.vm"/>
        </action>
        <action
        	path="/load4MemberEdit"
			type="com.report.home.action.LoginAction"
			scope="request"
			validate="false"
			parameter="load4MemberEdit">
			<forward name="success" path="/home/member_chgpwd.vm"/>
        </action>
	</action-mappings>


	<!-- ============================================= Controller Configuration -->

	<!--<controller
		processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>-->


	<!-- ======================================== Message Resources Definitions -->

	<message-resources parameter="resource.appResource" />


	<!-- =============================================== Plug Ins Configuration -->


	<!-- =================================================== Validator plugin -->

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
	</plug-in>

	<!-- =================================================== AOP plugin -->
	<!-- 自动加载interceptor-config.xml的信息 -->
<!--	<plug-in className="com.css.struts.aop.SAIFPlugin">-->
<!--		<set-property property="interceptor-config"-->
<!--			value="/WEB-INF/interceptor-config.xml"/>-->
<!--		<set-property value="UTF-8" property="encoding" />-->
<!--	</plug-in>-->
	
</struts-config>